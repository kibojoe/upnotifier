pkgname=('upnotifier')
pkgver=1709
pkgrel=1
pkgdesc='Check for pacman updates and notify user'
license=('CC-BY-SA 4.0')
arch=('any')
url="https://github.com/kibojoe/upnotifier"
makedepends=('git')
source=("git+$url.git")
sha256sums=('SKIP')

package() {
        cd $srcdir/$pkgname
	install -dm755 $pkgdir/usr/bin
}